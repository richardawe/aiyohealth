# Production Environment Variables for Aiyo Health Backend
# Copy this file to .env.production and fill in your values

# Flask Configuration
FLASK_ENV=production
FLASK_SECRET_KEY=your_super_secret_production_key_here
FLASK_DEBUG=false

# Database Configuration (Railway PostgreSQL)
DATABASE_URI=postgresql://username:password@host:port/database_name

# CORS Configuration
CORS_ORIGINS=https://your-app-name.railway.app,https://your-custom-domain.com

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=None
SESSION_COOKIE_DOMAIN=.your-domain.com

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security Configuration
WTF_CSRF_ENABLED=true
WTF_CSRF_CHECK_DEFAULT=true

# Machine Learning Models
MODEL_DIR=models
MODELS_AVAILABLE=true 